<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sinki.bai31_mutillanguage.MainActivity">

    <TextView
        android:id="@+id/txtMuaXuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/muaxuan"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/txtMuaHe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/muahe"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/txtMuaThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/muathu"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/txtMuaDong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/muadong"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
</LinearLayout>
